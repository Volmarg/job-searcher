{% set mailTemplateTypeClass   = "App\\Form\\MailTemplateType::" %}
{% set mailTemplateEntityClass = "App\\Entity\\MailTemplate::" %}
{% set KEY_NAME              = constant(mailTemplateEntityClass ~ "KEY_NAME") %}
{% set KEY_DESCRIPTION       = constant(mailTemplateEntityClass ~ "KEY_DESCRIPTION") %}
{% set KEY_SAVE              = constant(mailTemplateTypeClass ~ "KEY_SAVE") %}
{% set KEY_TITLE             = constant(mailTemplateEntityClass ~ "KEY_TITLE") %}
{% set KEY_ATTACHMENT_LINKS = constant(mailTemplateEntityClass ~ "KEY_ATTACHMENT_LINKS") %}
{# todo: move to dir: ajaxCalls/ etc.#}

<div class="row" style="margin-top:50px;">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">

                <div class="d-md-flex justify-content-center">
                    <div>
                        <h4 class="card-title">{{ "modules.jobSearchResults.header.main" | trans }}</h4>
                        <p class="card-subtitle"><i>{{ "modules.jobSearchResults.header.sub" | trans }}</i></p>
                    </div>
                </div>

                <section id="mailManageWrapper" style="padding:5px;" class="container-fluid ">

                    {# start demo #}
                    <div class="row">
                        <div class="col-sm-3 col-md-2">
                            <div class="p-2">
                                <a href="#" class="btn btn-danger btn-block" role="button">COMPOSE</a> {#todo: trans#}
                            </div>

                            <ul class="list-group mt-4">
                                <li class="list-group-item list-group-item-title font-weight-bold">Saved templates</li> {#todo: trans#}
                                {% for template in templates %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <a href="javascript:void(0)" class="active list-group-item-action" data-id="{{ template.getId() }}">
                                            <i class="mdi mdi-inbox"></i> {{ template.getName() }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>

                        </div>
                        <div class="col-sm-9 col-md-10">
                            <div class="card">
                                {{ form_start(form, {
                                    "attr": {
                                        "data-ajax-url"         : path('mail_template_ajax_save'),
                                        "data-submit-via-ajax"  : "true"
                                    }
                                }) }}

                                <div class="form-group row">
                                    <div class="col-12">
                                        {{ form_widget(form[KEY_NAME]) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        {{ form_widget(form[KEY_TITLE]) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        {{ form_widget(form[KEY_DESCRIPTION], {
                                            "attr": {
                                                "data-is-tinymce": "true"
                                            }
                                        }) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        {{ form_widget(form[KEY_ATTACHMENT_LINKS], {
                                            "attr": {
                                                "data-is-selectize": "true"
                                            }
                                        }) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        {{ form_widget(form[KEY_SAVE], {
                                            "attr": {
                                                "data-ajax-form-submit": "true",
                                            }
                                        }) }}
                                    </div>
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                </section>

            </div>

        </div>
    </div>
</div>
