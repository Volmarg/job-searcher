{% set dialogsController             = "App\\Controller\\DialogsController::" %}
{% set constantsController           = "App\\Controller\\ConstantsController::" %}

{% set TEMPLATE_TYPE_SEARCH_SETTINGS         = constant(dialogsController ~ 'TEMPLATE_TYPE_SEARCH_SETTINGS') %}
{% set MENU_ELEMENT_JOB_SEARCH               = constant(constantsController ~ 'MENU_ELEMENT_JOB_SEARCH') %}
{% set MENU_ELEMENT_MAIL_TEMPLATES           = constant(constantsController ~ 'MENU_ELEMENT_MAIL_TEMPLATES') %}
{% set MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING  = constant(constantsController ~ 'MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING') %}

<ul id="sidebar-menu">
    <li class="spacer"></li>
    <li class="spacer"></li>
    <li class="nav-item">
        <a class=""
           id="{{ MENU_ELEMENT_JOB_SEARCH }}"
           data-ajax-href="{{ path('job_search') }}"
           @click.prevent="loadPageContent($event)"
        >
            <i class="feather icon-sidebar"></i>
            <span class="menu-title">{{ 'menu.jobSearch.label' | trans }}</span>

            <div class="collapse show" id="navDashboard" style="">
                <ul class="flex-column sub-menu">
                    <li class="nav-item">
                        <a class="nav-link wave-effect waves-effect waves-block"
                           id="{{ MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING }}"
                           {# bootbox dialog data#}
                           data-call-bootbox-dialog="true"
                           data-bootbox-size="{{ BOOTBOX_SIZE_LARGE }}"
                           data-bootbox-type="{{ BOOTBOX_TYPE_ALERT }}"
                           data-bootbox-callback-type="{{ BOOTBOX_CALLBACK_TYPE_LOAD_TEMPLATE }}"
                           data-bootbox-callback-type-template-name="{{ TEMPLATE_TYPE_SEARCH_SETTINGS }}"
                           @click.prevent
                        >
                            <i class="feather icon-layout"></i>
                            <span class="menu-title">{{ 'menu.jobSearch.loadSetting' | trans }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link wave-effect collapsed" id="{{ MENU_ELEMENT_MAIL_TEMPLATES }}"
           data-ajax-href="{{ path('mail_template_manage') }}"
           @click.prevent="loadPageContent($event)"
        >
            <i class="feather icon-mail"></i>
            <span class="menu-title">{{ 'menu.mailTemplates' | trans }}</span>
        </a>
    </li>
</ul>