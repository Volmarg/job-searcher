{# Classes #}
{% set constantsControllerClass         = "App\\Controller\\ConstantsController::" %}
{% set bootboxController                = "App\\Controller\\BootboxController::" %}
{% set dialogController                 = "App\\Controller\\DialogsController::" %}
{% set jobOfferScrappingAction          = "App\\Controller\\Gui\\JobOfferScrappingAction::" %}

{# Constants #}
{% set KEY_JSON_RESPONSE_ERROR            =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_ERROR') %}
{% set KEY_JSON_RESPONSE_MESSAGE          =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_MESSAGE') %}
{% set KEY_JSON_RESPONSE_TEMPLATE         =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_TEMPLATE') %}
{% set KEY_JSON_RESPONSE_MAIL_TEMPLATE    =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_MAIL_TEMPLATE') %}
{% set KEY_JSON_RESPONSE_SEARCH_SETTING   =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_SEARCH_SETTING') %}
{% set KEY_JSON_RESPONSE_MAIL_TITLE       =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_MAIL_TITLE') %}
{% set KEY_JSON_RESPONSE_MAIL_DESCRIPTION =  constant(constantsControllerClass ~ 'KEY_JSON_RESPONSE_MAIL_DESCRIPTION') %}

{% set ENTITY_NAME_SEARCH_SETTING       =  constant(constantsControllerClass ~ 'ENTITY_NAME_SEARCH_SETTING') %}

{% set KEY_REQUEST_ID   =  constant(constantsControllerClass ~ 'KEY_REQUEST_ID') %}
{% set KEY_REQUEST_NAME =  constant(constantsControllerClass ~ 'KEY_REQUEST_NAME') %}

{% set BOOTBOX_SIZE_LARGE                  = constant(bootboxController ~ 'BOOTBOX_SIZE_LARGE') %}
{% set BOOTBOX_SIZE_SMALL                  = constant(bootboxController ~ 'BOOTBOX_SIZE_SMALL') %}
{% set BOOTBOX_TYPE_CONFIRM                = constant(bootboxController ~ 'BOOTBOX_TYPE_CONFIRM') %}
{% set BOOTBOX_TYPE_ALERT                  = constant(bootboxController ~ 'BOOTBOX_TYPE_ALERT') %}
{% set BOOTBOX_CALLBACK_TYPE_LOAD_TEMPLATE = constant(bootboxController ~ 'BOOTBOX_CALLBACK_TYPE_LOAD_TEMPLATE') %}

{% set TEMPLATE_TYPE_SEARCH_SETTINGS                = constant(dialogController ~ 'TEMPLATE_TYPE_SEARCH_SETTINGS') %}
{% set TEMPLATE_TYPE_SEARCH_RESULT_DETAILS          = constant(dialogController ~ 'TEMPLATE_TYPE_SEARCH_RESULT_DETAILS') %}
{% set TEMPLATE_JOB_SEARCH_RESULTS                  = constant(jobOfferScrappingAction~ 'TEMPLATE_JOB_SEARCH_RESULTS') %}
{% set TEMPLATE_TYPE_GENERATE_MAIL_FROM_TEMPLATE    = constant(dialogController~ 'TEMPLATE_TYPE_GENERATE_MAIL_FROM_TEMPLATE') %}
{% set TEMPLATE_TYPE_SAVE_SEARCH_SETTINGS           = constant(dialogController~ 'TEMPLATE_TYPE_SAVE_SEARCH_SETTINGS') %}

{% set MENU_ELEMENT_JOB_SEARCH               = constant(constantsControllerClass ~ 'MENU_ELEMENT_JOB_SEARCH') %}
{% set MENU_ELEMENT_MAIL_TEMPLATES           = constant(constantsControllerClass ~ 'MENU_ELEMENT_MAIL_TEMPLATES') %}
{% set MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING  = constant(constantsControllerClass ~ 'MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING') %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        {{ "page.title" | trans }}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootadmin core css #}
    <link rel="stylesheet" href="/bootadmin/style/vendor/library.min.css">
    <link rel="stylesheet" href="/bootadmin/style/vendor/jqueryui-flat/jquery-ui.min.css">
    <link rel="stylesheet" href="/css/libs/fontawesome/all.css">
    <link rel="stylesheet" href="/bootadmin/style/core/style.min.css">

    <link rel="shortcut icon" href="/bootadmin/images/favicon/favicon.ico">

    {# Main css #}
    <link rel="stylesheet" href="css/main.css">

    <script src="{{ getRuntimeJsScriptChunkFileLocation() }}"></script>
    <script src="{{ getVendorJsScriptChunkFileLocation() }}"></script>

    {% block headStylesheets %}{% endblock %}
    {% block headScripts %}{% endblock %}
</head>

<body id="landing" class="sidebar-open">
<div class="spinner d-none">
    <div class="loading-center"><img src="images/spinner.gif" alt="Loading" /></div>
</div>
<div class="page-container">
    <div id="dashboardPage">

        <!-- Main Menu -->
        {% include 'components/topbar.twig' %}
        {% include 'components/sidebar.twig' %}
        <main>
            <div class="container-fluid main-container-wrapper">
                {% block mainContainerWrapper %}{% endblock %}
                {% block scriptsAfterMainContainerWrapper %}{% endblock %}
            </div>
            {% include 'components/fotter.twig' %}
        </main>
    </div>

</div>

{# todo: move this out of here, or remove completely #}
<script>
    var KEY_JSON_RESPONSE_ERROR            = '{{ KEY_JSON_RESPONSE_ERROR }}';
    var KEY_JSON_RESPONSE_MESSAGE          = '{{ KEY_JSON_RESPONSE_MESSAGE }}';
    var KEY_JSON_RESPONSE_TEMPLATE         = '{{ KEY_JSON_RESPONSE_TEMPLATE }}';
    var KEY_JSON_RESPONSE_MAIL_TEMPLATE    = '{{ KEY_JSON_RESPONSE_MAIL_TEMPLATE }}';
    var KEY_JSON_RESPONSE_SEARCH_SETTING   = '{{ KEY_JSON_RESPONSE_SEARCH_SETTING }}';
    var KEY_JSON_RESPONSE_MAIL_TITLE       = '{{ KEY_JSON_RESPONSE_MAIL_TITLE }}';
    var KEY_JSON_RESPONSE_MAIL_DESCRIPTION = '{{ KEY_JSON_RESPONSE_MAIL_DESCRIPTION }}';

    var BOOTBOX_SIZE_LARGE                  = '{{ BOOTBOX_SIZE_LARGE }}';
    var BOOTBOX_SIZE_SMALL                  = '{{ BOOTBOX_SIZE_SMALL }}';
    var BOOTBOX_TYPE_CONFIRM                = '{{ BOOTBOX_TYPE_CONFIRM }}';
    var BOOTBOX_TYPE_ALERT                  = '{{ BOOTBOX_TYPE_ALERT}}';
    var BOOTBOX_CALLBACK_TYPE_LOAD_TEMPLATE = '{{ BOOTBOX_CALLBACK_TYPE_LOAD_TEMPLATE }}';

    var ENTITY_NAME_SEARCH_SETTING = '{{ ENTITY_NAME_SEARCH_SETTING }}';

    var TEMPLATE_TYPE_SEARCH_SETTINGS               = '{{ TEMPLATE_TYPE_SEARCH_SETTINGS }}';
    var TEMPLATE_TYPE_SEARCH_RESULT_DETAILS         = '{{ TEMPLATE_TYPE_SEARCH_RESULT_DETAILS }}';
    var TEMPLATE_JOB_SEARCH_RESULTS                 = '{{ TEMPLATE_JOB_SEARCH_RESULTS }}';
    var TEMPLATE_TYPE_GENERATE_MAIL_FROM_TEMPLATE   = '{{ TEMPLATE_TYPE_GENERATE_MAIL_FROM_TEMPLATE }}';
    var TEMPLATE_TYPE_SAVE_SEARCH_SETTINGS          = '{{ TEMPLATE_TYPE_SAVE_SEARCH_SETTINGS }}';

    var MENU_ELEMENT_JOB_SEARCH              = '{{ MENU_ELEMENT_JOB_SEARCH }}';
    var MENU_ELEMENT_MAIL_TEMPLATES          = '{{ MENU_ELEMENT_MAIL_TEMPLATES }}';
    var MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING = '{{ MENU_ELEMENT_JOB_SEARCH_LOAD_SETTING }}';

    var KEY_REQUEST_ID   = '{{ KEY_REQUEST_ID }}';
    var KEY_REQUEST_NAME = '{{ KEY_REQUEST_NAME }}';
</script>

<script src="{{ getJsChunkFileLocationForChunkName("sidebar") }}"></script>

</body>
</html>